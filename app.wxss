/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/* 全局样式 */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

/* 通用按钮样式 */
.btn {
  display: inline-block;
  padding: 20rpx 40rpx;
  margin: 10rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  transition: all 0.3s ease;
  border: none;
  cursor: pointer;
}

.btn-primary {
  background-color: #4A90E2;
  color: white;
}

.btn-primary:hover {
  background-color: #357ABD;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
}

.btn-secondary:hover {
  background-color: #e0e0e0;
}

.btn-success {
  background-color: #52C41A;
  color: white;
}

.btn-warning {
  background-color: #FAAD14;
  color: white;
}

.btn-danger {
  background-color: #F5222D;
  color: white;
}

/* 通用卡片样式 */
.card {
  background-color: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

/* 通用输入框样式 */
.input {
  width: 100%;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.input:focus {
  border-color: #4A90E2;
  outline: none;
}

/* 通用分割线样式 */
.divider {
  height: 2rpx;
  background-color: #f0f0f0;
  margin: 20rpx 0;
}

/* 通用文本样式 */
.text-primary {
  color: #4A90E2;
}

.text-secondary {
  color: #666;
}

.text-success {
  color: #52C41A;
}

.text-warning {
  color: #FAAD14;
}

.text-danger {
  color: #F5222D;
}

.text-muted {
  color: #999;
}

/* 通用间距样式 */
.mt-10 { margin-top: 10rpx; }
.mt-20 { margin-top: 20rpx; }
.mt-30 { margin-top: 30rpx; }
.mb-10 { margin-bottom: 10rpx; }
.mb-20 { margin-bottom: 20rpx; }
.mb-30 { margin-bottom: 30rpx; }
.ml-10 { margin-left: 10rpx; }
.ml-20 { margin-left: 20rpx; }
.mr-10 { margin-right: 10rpx; }
.mr-20 { margin-right: 20rpx; }

/* 通用布局样式 */
.flex {
  display: flex;
}

.flex-column {
  flex-direction: column;
}

.flex-center {
  align-items: center;
  justify-content: center;
}

.flex-between {
  justify-content: space-between;
}

.flex-around {
  justify-content: space-around;
}

/* 通用文本对齐 */
.text-left { text-align: left; }
.text-center { text-align: center; }
.text-right { text-align: right; }

/* 通用字体大小 */
.font-24 { font-size: 24rpx; }
.font-26 { font-size: 26rpx; }
.font-28 { font-size: 28rpx; }
.font-30 { font-size: 30rpx; }
.font-32 { font-size: 32rpx; }
.font-36 { font-size: 36rpx; }
.font-40 { font-size: 40rpx; }

/* 通用字体粗细 */
.font-normal { font-weight: normal; }
.font-medium { font-weight: 500; }
.font-bold { font-weight: bold; }

/* 通用边框 */
.border { border: 2rpx solid #ddd; }
.border-top { border-top: 2rpx solid #ddd; }
.border-bottom { border-bottom: 2rpx solid #ddd; }
.border-left { border-left: 2rpx solid #ddd; }
.border-right { border-right: 2rpx solid #ddd; }

/* 通用圆角 */
.rounded-sm { border-radius: 4rpx; }
.rounded { border-radius: 8rpx; }
.rounded-lg { border-radius: 12rpx; }
.rounded-full { border-radius: 50%; }

/* 通用阴影 */
.shadow-sm { box-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.1); }
.shadow { box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); }
.shadow-lg { box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.15); }

/* 通用溢出处理 */
.overflow-hidden { overflow: hidden; }
.text-ellipsis { overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

/* 通用位置 */
.relative { position: relative; }
.absolute { position: absolute; }
.fixed { position: fixed; }

/* 通用显示隐藏 */
.hidden { display: none; }
.visible { display: block; }
.invisible { visibility: hidden; }

/* 通用光标 */
.pointer { cursor: pointer; }
.not-allowed { cursor: not-allowed; }

/* 通用透明度 */
.opacity-50 { opacity: 0.5; }
.opacity-70 { opacity: 0.7; }
.opacity-90 { opacity: 0.9; }

/* 通用变换 */
.transition { transition: all 0.3s ease; }
.transform { transform: translateZ(0); }
.scale-95:hover { transform: scale(0.95); }
.scale-105:hover { transform: scale(1.05); }

/* 通用动画 */
@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

@keyframes slideIn {
  from { transform: translateY(20rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

@keyframes pulse {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.05); }
}

.fade-in {
  animation: fadeIn 0.3s ease-in-out;
}

.slide-in {
  animation: slideIn 0.3s ease-out;
}

.pulse {
  animation: pulse 2s infinite;
}

/* 通用禁用状态 */
.disabled {
  opacity: 0.5;
  cursor: not-allowed;
  pointer-events: none;
}

/* 通用加载状态 */
.loading {
  position: relative;
  pointer-events: none;
}

.loading::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40rpx;
  height: 40rpx;
  margin: -20rpx 0 0 -20rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #4A90E2;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

/* 通用状态颜色 */
.status-success { color: #52C41A; }
.status-warning { color: #FAAD14; }
.status-error { color: #F5222D; }
.status-info { color: #4A90E2; }

/* 通用图标大小 */
.icon-sm { width: 32rpx; height: 32rpx; }
.icon-md { width: 48rpx; height: 48rpx; }
.icon-lg { width: 64rpx; height: 64rpx; }

/* 通用图片样式 */
.img-cover {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.img-contain {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

/* 通用背景颜色 */
.bg-white { background-color: white; }
.bg-primary { background-color: #4A90E2; }
.bg-secondary { background-color: #f0f0f0; }
.bg-success { background-color: #52C41A; }
.bg-warning { background-color: #FAAD14; }
.bg-danger { background-color: #F5222D; }

/* 通用文本颜色 */
.text-white { color: white; }
.text-primary { color: #4A90E2; }
.text-secondary { color: #666; }
.text-success { color: #52C41A; }
.text-warning { color: #FAAD14; }
.text-danger { color: #F5222D; }
.text-muted { color: #999; }

/* 通用滚动条样式 */
::-webkit-scrollbar {
  width: 8rpx;
  height: 8rpx;
}

::-webkit-scrollbar-track {
  background: #f1f1f1;
}

::-webkit-scrollbar-thumb {
  background: #c1c1c1;
  border-radius: 4rpx;
}

::-webkit-scrollbar-thumb:hover {
  background: #a8a8a8;
}