/* pages/process/process.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部导航 */
.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  padding: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-back {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-back:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  padding-right: 80rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  display: block;
}

.subtitle {
  font-size: 24rpx;
  opacity: 0.9;
}

/* 图片预览区域 */
.preview-section {
  margin: 32rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.preview-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.preview-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

/* 处理状态覆盖层 */
.overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.7);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.overlay-content {
  text-align: center;
  color: white;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(255, 255, 255, 0.3);
  border-top: 6rpx solid white;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 24rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 28rpx;
  margin-bottom: 24rpx;
  display: block;
}

.progress-bar {
  width: 300rpx;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #4A90E2;
  transition: width 0.3s ease;
}

/* 水印检测框 */
.watermark-box {
  position: absolute;
  border: 4rpx solid #4A90E2;
  background-color: rgba(74, 144, 226, 0.1);
  pointer-events: none;
}

.box-border {
  position: absolute;
  top: -4rpx;
  left: -4rpx;
  right: -4rpx;
  bottom: -4rpx;
  border: 2rpx dashed #4A90E2;
}

.box-label {
  position: absolute;
  top: -40rpx;
  left: 0;
  background-color: #4A90E2;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

/* 图片信息 */
.image-info {
  padding: 24rpx;
  border-top: 2rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-item:last-child {
  margin-bottom: 0;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 120rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 处理选项 */
.options-section {
  margin: 32rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 32rpx;
  display: block;
}

.option-group {
  margin-bottom: 32rpx;
}

.option-group:last-child {
  margin-bottom: 0;
}

.option-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
  display: block;
}

.option-buttons {
  display: flex;
  gap: 16rpx;
}

.option-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  background-color: white;
  cursor: pointer;
  transition: all 0.3s ease;
}

.option-btn.active {
  border-color: #4A90E2;
  background-color: #f0f8ff;
}

.option-btn:active {
  transform: scale(0.98);
}

.btn-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 24rpx;
  color: #333;
}

/* 处理强度滑块 */
.slider-container {
  margin-top: 16rpx;
}

.intensity-slider {
  width: 100%;
  margin-bottom: 16rpx;
}

.slider-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #666;
}

/* 输出质量按钮 */
.quality-buttons {
  display: flex;
  gap: 16rpx;
}

.quality-btn {
  flex: 1;
  padding: 16rpx 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #333;
  background-color: white;
  cursor: pointer;
  transition: all 0.3s ease;
  text-align: center;
}

.quality-btn.active {
  border-color: #4A90E2;
  background-color: #4A90E2;
  color: white;
}

.quality-btn:active {
  transform: scale(0.98);
}

/* 操作按钮 */
.action-section {
  margin: 32rpx;
}

.process-btn {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
}

.secondary-actions {
  display: flex;
  gap: 16rpx;
}

.secondary-actions .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 处理日志 */
.log-section {
  margin: 32rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.log-container {
  max-height: 300rpx;
  background-color: #f8f9fa;
  border-radius: 8rpx;
  padding: 16rpx;
}

.log-item {
  margin-bottom: 16rpx;
  display: flex;
  flex-direction: column;
}

.log-item:last-child {
  margin-bottom: 0;
}

.log-time {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.log-message {
  font-size: 24rpx;
  color: #333;
  line-height: 1.4;
}

.log-message.info {
  color: #4A90E2;
}

.log-message.success {
  color: #52C41A;
}

.log-message.warning {
  color: #FAAD14;
}

.log-message.error {
  color: #F5222D;
}

/* 按钮状态 */
.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .preview-container {
    height: 300rpx;
  }
  
  .option-buttons {
    flex-direction: column;
  }
  
  .quality-buttons {
    flex-direction: column;
  }
}

/* 安全区域适配 */
.container {
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}