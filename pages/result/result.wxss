/* pages/result/result.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 40rpx;
}

/* 顶部导航 */
.header {
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
  color: white;
  padding: 32rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.nav-back {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 80rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  background-color: rgba(255, 255, 255, 0.2);
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-back:active {
  background-color: rgba(255, 255, 255, 0.3);
}

.back-icon {
  font-size: 32rpx;
  font-weight: bold;
}

.nav-title {
  flex: 1;
  text-align: center;
  padding-right: 80rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  margin-right: 16rpx;
}

.success-icon {
  font-size: 32rpx;
  color: #fff;
}

/* 图片对比区域 */
.compare-section {
  margin: 32rpx;
  background-color: white;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.compare-tabs {
  display: flex;
  background-color: #f8f9fa;
  border-bottom: 2rpx solid #e9ecef;
}

.compare-tab {
  flex: 1;
  padding: 24rpx;
  text-align: center;
  font-size: 28rpx;
  color: #666;
  cursor: pointer;
  transition: all 0.3s ease;
  position: relative;
}

.compare-tab.active {
  color: #4A90E2;
  background-color: white;
}

.compare-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background-color: #4A90E2;
}

.compare-container {
  position: relative;
  width: 100%;
  height: 400rpx;
  background-color: #f8f9fa;
  display: flex;
  align-items: center;
  justify-content: center;
}

.single-image {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.compare-image {
  max-width: 100%;
  max-height: 100%;
  object-fit: contain;
}

/* 滑动对比模式 */
.slider-compare {
  position: relative;
  width: 100%;
  height: 100%;
  overflow: hidden;
}

.slider-container {
  position: relative;
  width: 100%;
  height: 100%;
  touch-action: none;
}

.slider-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.slider-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 50%;
  height: 100%;
  overflow: hidden;
}

.slider-line {
  position: absolute;
  top: 0;
  left: 50%;
  width: 4rpx;
  height: 100%;
  background-color: #4A90E2;
  z-index: 10;
  cursor: ew-resize;
}

.slider-handle {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 60rpx;
  height: 60rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  border: 4rpx solid white;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3);
}

/* 处理信息 */
.info-section {
  margin: 32rpx;
}

.info-card {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.info-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.info-score {
  font-size: 28rpx;
  color: #FAAD14;
  font-weight: 500;
}

.info-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.info-item {
  display: flex;
  align-items: center;
}

.info-label {
  font-size: 26rpx;
  color: #666;
  width: 160rpx;
  flex-shrink: 0;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* 操作按钮 */
.action-section {
  margin: 32rpx;
}

.save-btn {
  width: 100%;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  background: linear-gradient(135deg, #52C41A 0%, #389E0D 100%);
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.action-buttons .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 相关推荐 */
.recommend-section {
  margin: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  display: block;
}

.recommend-list {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.recommend-item {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: transform 0.3s ease;
}

.recommend-item:active {
  transform: scale(0.98);
}

.recommend-image {
  width: 100%;
  height: 150rpx;
  object-fit: cover;
}

.recommend-info {
  padding: 16rpx;
}

.recommend-name {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-time {
  font-size: 22rpx;
  color: #999;
  display: block;
}

/* 按钮状态 */
.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .compare-container {
    height: 300rpx;
  }
  
  .recommend-list {
    grid-template-columns: 1fr;
  }
  
  .action-buttons {
    flex-direction: column;
  }
}

/* 安全区域适配 */
.container {
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}