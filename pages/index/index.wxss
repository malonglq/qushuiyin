/* pages/index/index.wxss */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 120rpx;
}

/* 顶部标题 */
.header {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
  padding: 60rpx 32rpx 40rpx;
  text-align: center;
}

.header-title {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 输入方式切换 */
.mode-switcher {
  margin: 32rpx 32rpx 24rpx;
}

.mode-tabs {
  display: flex;
  background-color: white;
  border-radius: 16rpx;
  padding: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.mode-tab {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
  cursor: pointer;
}

.mode-tab.active {
  background: linear-gradient(135deg, #4A90E2 0%, #357ABD 100%);
  color: white;
}

.mode-icon {
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.mode-text {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 4rpx;
}

.mode-desc {
  font-size: 24rpx;
  opacity: 0.7;
}

/* 传统上传区域 */
.upload-section {
  margin: 0 32rpx 32rpx;
}

.upload-area {
  background-color: white;
  border-radius: 16rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  border: 4rpx dashed #4A90E2;
  transition: all 0.3s ease;
  cursor: pointer;
}

.upload-area:active {
  background-color: #f8f9fa;
}

.upload-icon {
  font-size: 80rpx;
  color: #4A90E2;
  margin-bottom: 24rpx;
}

.upload-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
}

.upload-desc {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-desc text {
  font-size: 24rpx;
  color: #666;
  margin: 4rpx 0;
}

.upload-buttons {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.upload-buttons .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 链接读取区域 */
.link-section {
  margin: 0 32rpx 32rpx;
}

.link-input-area {
  background-color: white;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.link-label {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.link-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.link-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.link-input-wrapper {
  position: relative;
  margin-bottom: 24rpx;
}

.link-input {
  width: 100%;
  padding: 24rpx;
  padding-right: 140rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  transition: border-color 0.3s ease;
}

.link-input:focus {
  border-color: #4A90E2;
}

.link-paste-btn {
  position: absolute;
  right: 12rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  border-radius: 8rpx;
}

.link-buttons {
  display: flex;
  gap: 16rpx;
}

.link-buttons .btn {
  flex: 1;
  padding: 24rpx;
  font-size: 28rpx;
  border-radius: 12rpx;
}

/* 支持平台 */
.supported-platforms {
  margin-top: 32rpx;
  padding-top: 32rpx;
  border-top: 2rpx solid #f0f0f0;
}

.platforms-title {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  display: block;
}

.platform-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.platform-item {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background-color: #f8f9fa;
  border-radius: 20rpx;
  border: 2rpx solid #e9ecef;
}

.platform-icon {
  font-size: 24rpx;
  margin-right: 8rpx;
}

.platform-name {
  font-size: 24rpx;
  color: #666;
}

/* 最近处理记录 */
.recent-section {
  margin: 0 32rpx 32rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.section-more {
  font-size: 26rpx;
  color: #4A90E2;
  cursor: pointer;
}

.recent-images {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.recent-item {
  background-color: white;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  cursor: pointer;
  transition: transform 0.3s ease;
}

.recent-item:active {
  transform: scale(0.98);
}

.recent-image {
  width: 100%;
  height: 200rpx;
  object-fit: cover;
}

.recent-info {
  padding: 16rpx;
}

.recent-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 4rpx;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recent-time {
  font-size: 24rpx;
  color: #999;
  display: block;
}

.recent-empty {
  background-color: white;
  border-radius: 12rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 8rpx;
  display: block;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  display: block;
}

/* 底部导航 */
.bottom-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: white;
  border-top: 2rpx solid #f0f0f0;
  display: flex;
  justify-content: space-around;
  padding: 16rpx 0;
  padding-bottom: calc(16rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(16rpx + env(safe-area-inset-bottom));
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 8rpx 24rpx;
  cursor: pointer;
  transition: all 0.3s ease;
}

.nav-item.active {
  color: #4A90E2;
}

.nav-icon {
  font-size: 40rpx;
  margin-bottom: 4rpx;
}

.nav-text {
  font-size: 24rpx;
}

/* 按钮状态 */
.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.fade-in {
  animation: fadeIn 0.5s ease-out;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .recent-images {
    grid-template-columns: 1fr;
  }
  
  .platform-list {
    justify-content: center;
  }
}

/* 安全区域适配 */
.container {
  padding-bottom: calc(120rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(120rpx + env(safe-area-inset-bottom));
}